[Unit]
Description=Swoosh Audio Output Switcher
After=graphical-session.target pulseaudio.service pipewire.service
Wants=pulseaudio.service pipewire.service
PartOf=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.local/bin/swoosh
Restart=on-failure
RestartSec=3
Environment=DISPLAY=:0

# Ensure the service stops when the user session ends
KillMode=process

[Install]
WantedBy=graphical-session.target
